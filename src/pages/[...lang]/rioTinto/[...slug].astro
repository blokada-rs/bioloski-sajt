---
import { type CollectionEntry } from "astro:content";
import BlogPost from "../../../layouts/BlogPost.astro";
import { render } from "astro:content";
import { collection } from "@scripts/i18n";

const { lang } = Astro.params;
if (typeof lang === "undefined") {
  return Astro.rewrite(`/sr${Astro.url.pathname}`);
}

export async function getStaticPaths() {
  const posts = await collection("rioTinto");
  const ids = posts.map((p) => (p.id));
  console.log('Post ids:',ids);
  return posts.map((post) => ({
    params: { lang: post.lang, slug: post.id },
    props: post,
  }));
}

type Props = CollectionEntry<"rioTinto"> & { lang: string };

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost {lang} {...post.data}>
  <Content />
</BlogPost>
